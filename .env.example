# Application
APP_NAME="Health First Medical"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# ============================================
# ⚠️ KEAMANAN / SECURITY WARNING
# ============================================
# 1. JANGAN commit file .env ke repository
# 2. GANTI semua password default di production
# 3. Gunakan password yang kuat dan unik
# 4. Simpan API keys dengan aman
# 5. Set APP_DEBUG=false di production
# ============================================

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - Local Development
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=healthfirst_db
DB_USERNAME=root
DB_PASSWORD=

# Database - Railway Production
# Uncomment these for production and comment out local DB above
# Copy values from Railway MySQL service
# DB_CONNECTION=mysql
# DB_HOST=${MYSQLHOST}
# DB_PORT=${MYSQLPORT}
# DB_DATABASE=${MYSQLDATABASE}
# DB_USERNAME=${MYSQLUSER}
# DB_PASSWORD=${MYSQLPASSWORD}

# IMPORTANT for Railway: Railway automatically sets these variables
# You don't need to manually set them if deploying to Railway
# Just make sure your DB_* variables use ${MYSQLHOST} format

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# Queue
QUEUE_CONNECTION=database

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@healthfirstmedical.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis (Optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# Groq AI (for Health Assistant)
# ⚠️ SECURITY: Dapatkan API key dari https://console.groq.com/
# JANGAN share atau commit API key yang sebenarnya ke repository!
# Simpan dengan aman di environment variables production
GROQ_API_KEY=
