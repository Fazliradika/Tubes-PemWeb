{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml"
  },
  "deploy": {
    "preDeployCommand": [
      "php artisan migrate --force"
    ],
    "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT:-8000}",
    "healthcheckPath": "/health"
  }
}
